{
  "mcpServers": {
    "helpscout": {
      "command": "npx",
      "args": ["help-scout-mcp-server"],
      "env": {
        "HELPSCOUT_CLIENT_ID": "your-client-id-here",
        "HELPSCOUT_CLIENT_SECRET": "your-client-secret-here",
        "HELPSCOUT_BASE_URL": "https://api.helpscout.net/v2/",
        "ALLOW_PII": "false",
        "CACHE_TTL_SECONDS": "300",
        "LOG_LEVEL": "info"
      }
    }
  }
}